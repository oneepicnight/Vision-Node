    "lucide-react": "^0.321.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "recharts": "^2.15.4",
    "zod": "^3.20.6",
    "zustand": "^4.5.7"
  },
