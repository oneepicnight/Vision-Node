{
  "name": "vision-wallet",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "description": "Vision Wallet - Modern cryptocurrency wallet built with React + TypeScript + Vite",
  "scripts": {
    "postinstall": "node scripts/copy-env.js",
    "dev": "vite",
    "build": "tsc && vite build",
