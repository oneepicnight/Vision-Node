# Example environment configuration
# Copy this to .env and update with your values

# Node configuration
NODE_ENV=production
PORT=8080

# P2P Configuration
P2P_PORT=8081
BOOTSTRAP_PEERS=

# Test & CI helpers
# When set, disables P2P listener (useful for single-node integration tests)
VISION_DISABLE_P2P=0
# When set, disable mining dataset / miner start (speeds up integration tests)
VISION_MINER_DISABLED=0
# Test mode enables both P2P & miner fallbacks; set via env or --test-mode flag
VISION_TEST_MODE=0

# Database
DATA_DIR=./data

# CASH genesis airdrop CSV (only used for mainnet first-mint at CASH_FIRST_MINT_HEIGHT)
# Defaults to 'airdrop.csv' if not provided
VISION_CASH_AIRDROP_CSV=airdrop.csv

# Genensis land deed count (defaults to 1_000_000 for mainnet)
VISION_GENESIS_LAND_DEED_TOTAL=1000000
VISION_CASH_AIRDROP_CHUNK=256
VISION_MINER_ADDR=miner
 # Testing-only: enable simulation failure for rollback tests
 VISION_CASH_AIRDROP_SIM_FAIL=0
VISION_CASH_AIRDROP_USE_SNAPSHOT=0

# Logging
LOG_LEVEL=info

# Guardian Beacon (for Constellation nodes)
# Set this on Constellation nodes to connect to production Guardian beacon
BEACON_ENDPOINT=https://visionworld.tech/api/beacon

# Guardian mode flag (true for Guardian nodes, false/unset for Constellation)
VISION_GUARDIAN_MODE=false

