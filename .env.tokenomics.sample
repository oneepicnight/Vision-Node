# =============================================================================
# VISION NODE - TOKENOMICS CONFIGURATION SAMPLE
# =============================================================================
# Copy this to .env and customize for your environment
# All parameters are optional - defaults will be used if not specified

# ----------------------------------------------------------------------------
# EMISSION CONTROL
# ----------------------------------------------------------------------------

# Enable/disable block emission (default: true)
# Set to "false" to completely disable new token creation
VISION_TOK_ENABLE_EMISSION=true

# Base emission per block in smallest unit (default: 1_000_000_000_000 = 1000 tokens with 9 decimals)
# This is the starting emission rate before any halvings occur
VISION_TOK_EMISSION_PER_BLOCK=1000000000000

# Halving interval in blocks (default: 2_102_400 blocks ≈ 30 days at 1.25s/block)
# Production Bitcoin-like: Use 101_293_440 for true 4-year halvings
# Testnet: Use 10_000 for ~3.5 hour halvings (fast testing)
VISION_TOK_HALVING_INTERVAL_BLOCKS=2102400

# ----------------------------------------------------------------------------
# FEE ECONOMICS (Basis Points: 1 bps = 0.01%)
# ----------------------------------------------------------------------------

# Percentage of transaction fees to DISTRIBUTE (NOT BURN) to 50/30/20 split (default: 1000 bps = 10%)
# This portion of fees goes to: Vault (50%), Fund (30%), Treasury (20%)
# The remaining 90% of fees go to the miner
# Valid range: 0-5000 (0-50%)
# NOTE: No coins are actually burned - they are redistributed to governance funds
VISION_TOK_FEE_BURN_BPS=1000

# Percentage of block emission allocated to treasury (default: 500 bps = 5%)
# Treasury funds governance-approved expenditures
# Valid range: 0-2500 (0-25%)
VISION_TOK_TREASURY_BPS=500

# ----------------------------------------------------------------------------
# STAKING SYSTEM
# ----------------------------------------------------------------------------

# Epoch length for staking reward payouts (default: 720 blocks ≈ 15 minutes)
# Stakers receive pro-rata rewards from 10% of Vault balance every epoch
VISION_TOK_STAKING_EPOCH_BLOCKS=720

# ----------------------------------------------------------------------------
# FUND ADDRESSES (64-character hex without 0x prefix)
# ----------------------------------------------------------------------------

# Vault Address - Receives 50% of land sale revenue, funds staking rewards
VISION_VAULT_ADDR=aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa

# Fund Address - Receives 30% of land sale revenue, ecosystem development
VISION_FUND_ADDR=bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb

# Treasury Address - Receives 20% of land sales + 5% of block emission
VISION_TREASURY_ADDR=cccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc

# ----------------------------------------------------------------------------
# GOVERNANCE GUARDRAILS
# ----------------------------------------------------------------------------

# Require governance approval for tokenomics parameter changes (default: false)
# When enabled, all changes to tokenomics config must reference a passed governance proposal
# Recommended for production networks with active governance
VISION_TOK_GOVERNANCE_REQUIRED=false
