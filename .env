# =============================================================================
# VISION NODE - TOKENOMICS + 2-LAND BLOCK TITHE
# =============================================================================

# ----------------------------------------------------------------------------
# TOKENOMICS: Official emission system with Bitcoin-style halving
# ----------------------------------------------------------------------------

# Enable/disable block emission (default: true)
VISION_TOK_ENABLE_EMISSION=true

# Base emission per block in smallest unit (default: 32_000_000_000 = 32 tokens with 9 decimals)
VISION_TOK_EMISSION_PER_BLOCK=32000000000

# Halving interval in blocks (default: 2_102_400 blocks  30 days at 1.25s/block)
VISION_TOK_HALVING_INTERVAL_BLOCKS=2102400

# Fee distribution to foundation (default: 0 bps = 0%)
# NOTE: We're using the block tithe instead of fee distribution for now
VISION_TOK_FEE_BURN_BPS=0

# Treasury siphon from emission (default: 0 bps = 0%)
VISION_TOK_TREASURY_BPS=0

# Staking epoch length (default: 720 blocks  15 minutes)
VISION_TOK_STAKING_EPOCH_BLOCKS=720

# ----------------------------------------------------------------------------
# FOUNDATION ADDRESSES: Vault / Fund (Ops) / Treasury (Founders)
# ----------------------------------------------------------------------------

# Vault (Cold Storage) - receives 50% of tithe
VISION_TOK_VAULT_ADDR=0xb977c16e539670ddfecc0ac902fcb916ec4b944e

# Fund (Ops/Dev Fund) - receives 30% of tithe
VISION_TOK_FUND_ADDR=0x8bb8edcd4cdbcb132cc5e88ff90ba48cebf11cbd

# Treasury (Founders: You + Travis) - receives 20% of tithe
VISION_TOK_TREASURY_ADDR=0xdf7a79291bb96e9dd1c77da089933767999eabf0

# ----------------------------------------------------------------------------
# 2-LAND BLOCK TITHE: Siphoned every block to grow Vault from block 1
# ----------------------------------------------------------------------------

# Tithe size (default 2 LAND = 200_000_000 with 8 decimals)
VISION_TOK_TITHE_AMOUNT=200000000

# Tithe split (bps out of 10000). Default: 0/50/30/20
VISION_TOK_TITHE_MINER_BPS=0
VISION_TOK_TITHE_VAULT_BPS=5000
VISION_TOK_TITHE_FUND_BPS=3000
VISION_TOK_TITHE_TREASURY_BPS=2000

# ----------------------------------------------------------------------------
# MINER ADDRESS: Address to receive mining rewards (default: Treasury/Founders)
# ----------------------------------------------------------------------------
VISION_MINER_ADDRESS=0xdf7a79291bb96e9dd1c77da089933767999eabf0
